<Window x:Class="NaucniRad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NaucniRad"
        mc:Ignorable="d"
        Title="Informisani pristanak" Height="500" Width="900" ResizeMode="NoResize">
    <Grid>
        <!--#region Definisanje grida-->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.09*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.09*"/>

        </Grid.ColumnDefinitions>
        <!--#endregion-->
        <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Text="INFORMISANI PRISTANAK" FontSize="20" FontWeight="Bold"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="17" FontWeight="DemiBold" Margin="0, 0, 0, 0" TextAlignment="Justify" TextWrapping="Wrap" ><Run Text="Poštovani, "/><LineBreak/><Run Text="Ovo istraživanje se sprovodi u svrhu izrade naučnoistraživačkog rada na temu “Ispitivanje implicitnih stavova studenata Medicinskog fakulteta i Fakulteta tehničkih nauka prema osobama sa fizičkim invaliditetom”.  "/><LineBreak/><Run Text="Cilj istraživanja je primenom prilagođenog i personalizovanog Testa implicitnih asocijacija utvrditi nesvesne preference osoba prema grupi osoba sa ili bez fizičkog invaliditeta. Takođe želimo da ustanovimo da li postoje razlike u tim preferencama u odnosu na pol, fakultet koji studiraju ispitanici, kao i to da li oni sami imaju invaliditet. "/><LineBreak/><Run Text="Za odrađivanje testa je potrebno maksimalno 10-15 minuta. U istraživanju mogu učestvovati svi studenti Medicinskog fakulteta i studenti Fakulteta tehničkih nauka. Učestvovanje u ovom istraživanju potpuno je anonimno i dobrovoljno, te možete u bilo kojem trenutku odustati ili se povući iz istraživanja. Podaci prikupljeni ovim upitnikom koristiće se isključivo u svrhu izrade naučnoistraživačkog rada."/><LineBreak/><Run Text="Molimo Vas da pažljivo pročitate uputstva u svakom koraku i da pokušate da budete skoncentrisani. "/><LineBreak/><Run Text="Za sva dodatna pitanja i informacije možete pisati na e-mail adrese: "/></TextBlock>
        <Button Grid.Row="3" Height="40" Width="120" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2"  Click="UvodDaljeClick" BorderBrush="#7CFC00" Background="#7CFC00" FontWeight="Bold" IsDefault="True" FontSize="20">Pristajem</Button>
        <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold" FontSize="20"><Run Text="srdjotomic20@gmail.com"/><LineBreak/><Run Text="andjela9popovic@gmail.com"/></TextBlock>

    </Grid>
</Window>
